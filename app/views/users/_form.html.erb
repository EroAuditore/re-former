<% if @user.errors.any? %> 
  <h2>The following errors prevented the user from being saved</h2> 
  <ul> 
    <% @user.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>

<%= form_with(model: @user, local: true  ) do |form| %>
    <%= form.label 'Username:' %>
    <%= form.text_field :username, placeholder: 'admin_example', required: true %><br><br>

    <%= form.label 'Email:' %>
    <%= form.text_field :email, placeholder: 'example@example.com'  %><br><br>

    <%= form.label 'Password:' %>
    <%= form.password_field :password%><br><br>

    <%= form.submit "Create" %>
<% end %>