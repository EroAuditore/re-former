<h1>Users index</h1>

<table>
 <thead>
    <tr> 
        <th> User Name</th>
        <th> Email </th>
        <th colspan="2"> Actions</th>
    </tr>
 </thead>
 <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.username %> </td>
            <td><%= user.email %> </td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            
        </tr>
       
    <% end %>
    
 </tbody>
</table>
<p>
<%= link_to 'Create New user', new_user_path %>
</p>